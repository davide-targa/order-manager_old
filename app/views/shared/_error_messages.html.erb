<% if object && object.errors.size > 0 %>
  <div id="error_explanation">
    <h2><%= pluralize(object.errors.size, "errore ha", "errori hanno") %> impedito il salvataggio del record</h2>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>      
    </ul>
  </div>
<% end %>
