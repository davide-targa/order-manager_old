<div class="ui-widget ui-widget-header ui-corner-top titolo-pagina">Elenco articoli per il modello "<%= @model.code %>"</div>
<div class="ui-widget ui-widget-content ui-corner-bottom">
  <div class="contestual-menu">
    <%= link_to 'Indietro', order_models_path(@order), :class => "ui-state-active no-underline ui-corner-all ui-priority-primary contestual-link" %>
  </div>
  <div id="container">
    <div class="form">
      <%= render 'form' %>
    </div>
    <% if @articles.length > 0 %>
      <table>
        <tr>
          <th>Codice a barre</th>
          <th>Taglia</th>
          <th></th>
          <th></th>
        </tr>

        <% @articles.each do |article| %>
          <tr>
            <td><%= article.barcode %></td>
            <td><%= article.size %></td>
            <td><%= link_to 'Modifica', edit_order_model_article_path(@order,@model,article) %></td>
            <td><%= link_to 'Elimina', order_model_article_path(@order,@model,article), :confirm => 'Procedere con la cancellazione?', :method => :delete %></td>
          </tr>
        <% end %>
      </table>
    <% else %>
      <p>Nessun articolo disponibile</p>
    <% end %>
  </div>
</div>
